<?xml version="1.0"?>
<!DOCTYPE dialog SYSTEM "chrome://charpick/locale/main.dtd">
<?xml-stylesheet href="chrome://charpick/content/style.css" type="text/css"?>

<dialog id="charpick-add-palette-dialog"
	title="&add.palette;"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	buttons="accept,cancel"
	ondialogaccept="window.arguments[0].add = true;
		window.arguments[0].palette = document.getElementById('charpick-textbox').value;">

	<script type="application/x-javascript" src="chrome://charpick/content/charpick.js" />

	<vbox id="charpick-add-palette-details">
		<hbox>
			<label value="&new.palette.label;" control="palette" accesskey="P" />
			<textbox id="charpick-textbox" />
		</hbox>
	</vbox>
</dialog>
